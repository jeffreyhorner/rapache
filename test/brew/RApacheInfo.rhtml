<% 
hrefify <- function(title){
	gsub("[\\.()]",'_',title,perl=TRUE)
}
zebra <- function(title,l){
	cl<-'e' 
	cat('<h2><a name="',hrefify(title),'"> </a>',title,'</h2><table><tbody>',sep='')
	if (is.list(l)){
		for (i in names(l)) { 
			cl <- ifelse(cl=='e','o','e')
			%><tr class="<%=cl%>"><td class="l"><%=i%></td><td><%=as.character(l[[i]])%></td></tr><%
		}
	} else {
		for (i in l) { 
			cl <- ifelse(cl=='e','o','e')
			%><tr class="<%=cl%>"><td><%=as.character(i)%></tr><%
		}
	}
	cat('</tbody></table>')
}
zebrifyPackage <-function(package){
	zebra(package,unclass(packageDescription(package)))
	cat("<br><hr>\n")
}
setContentType("text/html")
-%>
